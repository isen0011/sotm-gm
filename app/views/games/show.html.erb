<p>
  <strong>Title:</strong>
  <%= @game.title %>
</p>

<p>
  <strong>State:</strong>
  <%= @game.state %>
</p>

<p>
  <strong>Turn:</strong>
  <%= @game.turn %>
</p>

<h2>Decks</h2>
<%= render @game.decks %>

<h2>Add a deck:</h2>
<%= render 'decks/form' %>

<%= link_to 'Edit', edit_game_path(@game) %>
<%= link_to 'Back', games_path %>

<p>
  <textarea id="bbcode" name="bbcode" style="width:600px; height:300px;">
  <%= @game.bbcode.html_safe %>
  </textarea>
</p>
<p>
  <%= @game.bbcode.bbcode_translate.html_safe %>
</p>
